<h1>Create a Cat!</h1>

    <form action="cat_url" method="POST">
        <label for="name">Name</label>
        <input id="name" type="text" name="cat[name]"/>

        <br>

        <label for="sex">Sex</label>
        <input id="sex" type="radio" name="cat[sex]" value="M"/>M
        <input id="sex" type="radio" name="cat[sex]" value="F"/>F<br>

        <label for="cat_color">Color</label>
        <select id="cat_color" name="cat[color]">
            <option disabled selected>--default--</option>
            <% COLORS.each do |color| %>
            <option value='<%= color %>'><%= color %></option>
            <% end %>
        </select>

        <br>

        <label for="birth_date">Birth Date</label>
        <input id="birth_date" type="date" name="cat[birth_date]"/> 
        
        <br>

        <label for="description">Description</label>
        <input type="textarea" id="description" name="cat[description]"/>

        <input type="submit" value="submit"/>
    </form>